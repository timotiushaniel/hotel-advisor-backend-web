<script>
  function myModalUpdate(id_hotel, nama_hotel, alamat_hotel, harga_termurah, harga_termahal) {
    $("#myModalUpdate").find("[name='id_hotel']").val(id_hotel);
    $("#myModalUpdate").find("[name='nama_hotel']").val(nama_hotel);
    $("#myModalUpdate").find("[name='alamat_hotel']").val(alamat_hotel);
    $("#myModalUpdate").find("[name='harga_termurah']").val(harga_termurah);
    $("#myModalUpdate").find("[name='harga_termahal']").val(harga_termahal);
  }
</script>

<script>
  function myModalDelete(id_hotel) {
    $("#myModalDelete").find("[name='id_hotel']").val(id_hotel);
  }
</script>


