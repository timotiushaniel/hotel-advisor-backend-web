    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">

        <div class="col-12">
            <!-- TABLE: LATEST ORDERS -->
            <div class="card">
              <div class="card-header border-transparent">
                <h3 class="card-title">Hotel List</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table m-0">
                    <thead>
                        <tr>
                            <th>Hotel ID</th>
                            <th>Nama Hotel</th>
                            <th>Kota</th>
                            <th>Alamat Hotel</th>
                            <th>Range Harga Kamar (Per Malam)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < results.length ; i++) { %>
                            <tr>
                                <td><%= results[i].id_hotel %></td>
                                <td><%= results[i].nama_hotel %></td>
                                <td><%= results[i].nama_kota %></td>
                                <td><%= results[i].alamat_hotel %></td>
                                <td><%= results[i].harga_termurah %> - <%= results[i].harga_termahal %></td>
                                <td>
                                  <button class="btn btn-sm btn-success" data-toggle="modal" data-target="#myModalUpdate" style="text-align: center;" title="Update" onclick='myModalUpdate("<%= results[i].id_hotel %>","<%=  results[i].nama_hotel %>","<%=  results[i].alamat_hotel %>","<%= results[i].harga_termurah %>","<%=  results[i].harga_termahal %>")'>Update</button>
                                  <button class="btn btn-sm btn-danger" data-toggle="modal" data-target="#myModalDelete" style="text-align: center; margin-left: 20px;" title="Delete" onclick='myModalDelete("<%= results[i].id_hotel %>")'>Delete</button>
                                </td>
                            </tr>
                        <% }; %>
                    </tbody>
                  </table>
                </div>
                <!-- /.table-responsive -->
              </div>
              <!-- /.card-body -->
              <div class="card-footer clearfix">
                <button class="btn btn-sm btn-info float-left" data-toggle="modal" data-target="#myModalAdd">Add New Hotel</button>
              </div>

              <form action="/datahotel" method="post">
                <div class="modal fade" id="myModalAdd" name="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Add New Hotel</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <input type="text" name="id_kota" class="form-control" placeholder="ID Kota" required>
                                </div>
                                <div class="form-group">
                                  <input type="text" name="nama_hotel" class="form-control" placeholder="Nama Hotel" required>
                              </div>
                                <div class="form-group">
                                  <input type="text" name="alamat_hotel" class="form-control" placeholder="Alamat Hotel" required>
                              </div>
                              <div class="form-group">
                                <input type="text" name="harga_termurah" class="form-control" placeholder="Harga Termurah" required>
                            </div>
                            <div class="form-group">
                              <input type="text" name="harga_termahal" class="form-control" placeholder="Harga Termahal" required>
                          </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            
            <form action="/datahotel?_method=DELETE" method="POST">
              <div class="modal fade" id="myModalDelete" name="myModalDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                      <div class="modal-content">
                          <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Delete Hotel</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                              </button>
                          </div>
                          <div class="modal-body">
                              <div class="form-group">
                                  <input type="hidden" name="id_hotel" class="form-control" placeholder="ID Hotel" required>
                                  <strong>Are you sure want to delete this data?</strong>
                              </div>
                          </div>
                          <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                              <button type="submit" class="btn btn-primary">Delete</button>
                          </div>
                      </div>
                  </div>
              </div>
          </form>


          <form action="/datahotel?_method=PUT" method="POST">
            <div class="modal fade" id="myModalUpdate" name="myModalUpdate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Update Hotel</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                              <input type="hidden" name="id_hotel" class="form-control"  placeholder="ID Hotel" required>
                              <input type="text" name="nama_hotel" class="form-control" style="margin-top: 5px;" placeholder="Nama Hotel Baru" required> 
                              <input type="text" name="alamat_hotel" class="form-control" style="margin-top: 5px;" placeholder="Alamat Hotel Baru" required> 
                              <input type="text" name="harga_termurah" class="form-control" style="margin-top: 5px;" placeholder="Harga Termurah" required> 
                              <input type="text" name="harga_termahal" class="form-control" style="margin-top: 5px;" placeholder="Harga Termahal" required> 
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
            </div>
      </form>

              <!-- /.card-footer -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        <!-- /.row -->
      </div><!--/. container-fluid -->
